<addon scheme="2.0">
	<id>loogaru_vendor_restrictions</id>
	<version>1.1</version>
	<name>[Loogaru] Vendor restrictions</name>
	<description><![CDATA[Restricts order statuses that available for vendors<a target="_blank" href="http://looga.ru/cs-cart_module/vendor-restrictions_add-on/"> View add-on page</a>]]></description>
	<has_icon>Y</has_icon>
	<priority>10</priority>
	<position>0</position>
	<status>active</status>
	<auto_install>MULTIVENDOR,ULTIMATE</auto_install>
	
	<settings edition_type="ROOT,ULT:VENDOR">
        <sections>
            <section id="general">
                <items>
					<item id="statuses">
						<type>multiple checkboxes</type>
						<name>Unavailable statuses</name>
						<translations>
                            <item lang="ru">Недоступные статусы</item>
							<item lang="es">Estados no disponibles</item>
							<item lang="it">Non disponibili stati</item>
							<item lang="de">Nicht verfügbare Status</item>
							<item lang="sr">Недоступна статуси</item>
                        </translations>
						<variants/>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
	
	<default_language>en</default_language>
	<authors>
		<author>
			<name>Durkin Andrey</name>
			<email>andrey@looga.ru</email>
			<url>http://looga.ru</url>
		</author>
	</authors>
	<supplier>Loogaru</supplier>
	<supplier_link>http://looga.ru</supplier_link>
	<compatibility>
		<core_edition>ULTIMATE,MULTIVENDOR</core_edition>
	</compatibility>

	<translations>
		<item for="name" lang="ru">[Loogaru] Ограничения для продавца</item>
		<item for="description" lang="ru"><![CDATA[Ограничивает, доступные для продавца, статусы заказов<a target="_blank" href="http://looga.ru/cs-cart_module/vendor-restrictions_add-on/"> Открыть страницу модуля</a>]]></item>
	</translations>
</addon>
